<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.login.OTPVerificationActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarOtpVerification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_below="@id/toolbarOtpVerification"
        android:orientation="vertical">

        <TextView
            android:id="@+id/otpInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:text='Enter the 6-digit passcode that is sent to your registered phone number'
            android:textColor="#727272"
            android:textSize="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <LinearLayout
            android:id="@+id/phoneContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="80dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_below="@id/otpInstructions">

            <EditText
                android:id="@+id/otp_1"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:background="@drawable/borderbottom"
                android:focusable="auto"
                android:gravity="center"
                android:inputType="number"
                android:textSize="30dp"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/otp_2"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/borderbottom"
                android:focusable="auto"
                android:gravity="center"
                android:inputType="number"
                android:textSize="30dp"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/otp_3"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/borderbottom"
                android:focusable="auto"
                android:gravity="center"
                android:inputType="number"
                android:textSize="30dp"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/otp_4"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/borderbottom"
                android:focusable="auto"
                android:gravity="center"
                android:inputType="number"
                android:textSize="30dp"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/otp_5"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/borderbottom"
                android:focusable="auto"
                android:gravity="center"
                android:inputType="number"
                android:textSize="30dp"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/otp_6"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginStart="13dp"
                android:background="@drawable/borderbottom"
                android:focusable="auto"
                android:gravity="center"
                android:inputType="number"
                android:textSize="30dp"
                android:maxLength="1"/>
        </LinearLayout>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="60dp"
            android:background="@color/green"
            android:text="VERIFY"
            android:layout_gravity="center"
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/resendOtp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text='Resend OTP'
            android:textColor="#3d3d79"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    </LinearLayout>

</RelativeLayout>